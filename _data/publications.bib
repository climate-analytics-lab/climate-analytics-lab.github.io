	journal = {Journal of Geophysical Research: Atmospheres (1984–2012)},
	author = {Bandy, Alan R. and Thornton, Donald C. and Tu, Fang H. and Blomquist, Byron W. and Nadler, Wolfgang and Mitchell, Glenn M. and Lenschow, Donald H.},
