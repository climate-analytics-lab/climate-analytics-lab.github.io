@article{liu_cloud_2024,
	title = {Cloud {Susceptibility} to {Aerosols}: {Comparing} {Cloud}‐{Appearance} {Versus} {Cloud}‐{Controlling} {Factors} {Regimes}},
	volume = {129},
	issn = {2169-897X},
	url = {https://app.readcube.com/library/cca414c9-6857-4378-ae5d-4b7ca900d5f9/item/56f29384-cd4a-4764-b19a-d5687d8b99bc},
	doi = {10.1029/2024jd041216},
	abstract = {Clouds can be classified into regimes based on their appearance or meteorological controlling factors. The cloud appearance regimes inherently include adjustments to aerosol effects, such as transitions between closed and open cells. Therefore, calculating cloud susceptibilities to aerosols for each cloud‐appearance regime individually and then aggregating them excludes much of the cloud adjustment component of the susceptibilities. In contrast, aggregating susceptibilities over regimes defined by cloud‐controlling factors includes the full effects of cloud adjustments. Here we compared the susceptibilities of the two kinds of cloud regimes and demonstrated this effect. Overall, increasing cloud droplet number concentration (Nd) consistently correlates to weaker precipitation, higher cloud fraction (CF), and reduced liquid water path, regardless of how the regime is defined. However, their susceptibilities to Nd aggregated over cloud‐appearance regimes are significantly lower than those aggregated over cloud‐controlling factors regimes, with lower‐tropospheric stability (LTS) serving as an example to define cloud‐controlling factors regimes. This underestimation is more pronounced for CF susceptibility, where the susceptibility for cloud appearance regimes is only 1/4 of the susceptibility for cloud controlling regimes. These findings imply that relying solely on cloud‐appearance regimes may underestimate the effective radiative forcing produced by cloud adjustment (ERFaci). Nevertheless, the substantial variability in the magnitude of cloud adjustment across appearance regimes at similar LTS also suggests that a single cloud‐controlling factor is not sufficient to fully separate cloud regimes to quantify cloud adjustment. Therefore, identifying a comprehensive set of cloud‐controlling factors is essential for accurately quantifying cloud adjustments in future studies. Understanding the impact of aerosols on marine low clouds is vital for accurately predicting changes in Earth's climate. Their interactions, known as aerosol‐cloud interactions (ACI), introduce significant uncertainty into our estimates of how much human activities contribute to climate change. Clouds exhibit varying responses to changes in cloud droplet number concentration (Nd), a proxy for aerosols, depending on specific cloud regimes representing distinct atmospheric conditions. However, the definition of cloud regime is often vague, with some defined based on the appearance of clouds and others on their meteorological controlling factors. In our study, we compared the sensitivity of cloud properties to Nd between these two different definitions of cloud regimes. We found that cloud susceptibilities to Nd aggregated over cloud‐appearance regimes are notably lower than those aggregated over cloud‐controlling factors regimes. Cloud fraction susceptibility to Nd aggregated over cloud appearance regimes is only one‐fourth of that over cloud controlling regimes. These results suggest that quantifying cloud adjustment to Nd simply within cloud appearance regimes will likely underestimate the effective radiative forcing of ACI (ERFaci) without accounting for the effect of aerosols on cloud‐appearance regimes. Cloud‐appearance regimes are unsuitable for quantifying cloud adjustment to cloud droplet number concentration (Nd) The susceptibility of cloud fraction to Nd for cloud‐appearance regimes is only 1/4 of that based on cloud‐controlling regimes Quantifying cloud adjustment simply within cloud‐appearance regimes is likely to underestimate ERFaci Cloud‐appearance regimes are unsuitable for quantifying cloud adjustment to cloud droplet number concentration (Nd) The susceptibility of cloud fraction to Nd for cloud‐appearance regimes is only 1/4 of that based on cloud‐controlling regimes Quantifying cloud adjustment simply within cloud‐appearance regimes is likely to underestimate ERFaci},
	number = {14},
	journal = {Journal of Geophysical Research: Atmospheres},
	author = {Liu, Jihu and Zhu, Yannian and Wang, Minghuai and Rosenfeld, Daniel and Cao, Yang and Yuan, Tianle},
	year = {2024},
}

