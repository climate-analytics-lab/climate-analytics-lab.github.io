	author = {Mirowski, Piotr and Warde-Farley, David and Rosca, Mihaela and Grimes, Matthew Koichi and Hasson, Yana and Kim, Hyunjik and Rey, Mélanie and Osindero, Simon and Ravuri, Suman and Mohamed, Shakir},
