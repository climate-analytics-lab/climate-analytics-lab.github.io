	journal = {Atmospheric Chemistry and Physics},
	author = {Clarke, A. D. and Freitag, S. and Simpson, R. M. C. and Hudson, J. G. and Howell, S. G. and Brekhovskikh, V. L. and Campos, T. and Kapustin, V. N. and Zhou, J.},
