	journal = {Journal of Geophysical Research: Atmospheres (1984–2012)},
	author = {Lee, Chulkyu and Martin, Randall V. and Donkelaar, Aaron van and Lee, Hanlim and Dickerson, Russell R. and Hains, Jennifer C. and Krotkov, Nickolay and Richter, Andreas and Vinnikov, Konstantine and Schwab, James J.},
