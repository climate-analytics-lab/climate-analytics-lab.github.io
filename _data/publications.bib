	number = {D23},
	journal = {Journal of Geophysical Research: Atmospheres},
	author = {Clarke, A. D. and Collins, W. G. and Rasch, P. J. and Kapustin, V. N. and Moore, K. and Howell, S. and Fuelberg, H. E.},
