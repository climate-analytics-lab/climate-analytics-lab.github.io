	file = {Gryspeerdt-Constraining the aerosol influence on cloud fraction-2016-Journal of Geophysical Research- Atmospheres:/Users/watson-parris/Zotero/storage/B3M2U3E6/Gryspeerdt-Constraining the aerosol influence on cloud fraction-2016-Journal of Geophysical Research- Atmospheres.pdf:application/pdf},
}

@article{langenbrunner_paretooptimal_2017,
	title = {Pareto‐{Optimal} {Estimates} of {California} {Precipitation} {Change}},
	volume = {44},
	issn = {0094-8276},
