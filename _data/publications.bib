}

@article{kahn_reducing_2023,
	title = {Reducing {Aerosol} {Forcing} {Uncertainty} by {Combining} {Models} {With} {Satellite} and {Within}‐{The}‐{Atmosphere} {Observations}: {A} {Three}‐{Way} {Street}},
	volume = {61},
