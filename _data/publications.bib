	file = {Gryspeerdt-Surprising similarities in model and observational aerosol radiative forcing estimates-2020-Atmospheric Chemistry and Physics:/Users/watson-parris/Zotero/storage/WIVP27DV/Gryspeerdt-Surprising similarities in model and observational aerosol radiative forcing estimates-2020-Atmospheric Chemistry and Physics.pdf:application/pdf},
