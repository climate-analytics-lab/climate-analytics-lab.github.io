	number = {9},
	journal = {Atmospheric Chemistry and Physics},
	author = {Kokkola, H. and Korhonen, H. and Lehtinen, K. E. J. and Makkonen, R. and Asmi, A. and Järvenoja, S. and Anttila, T. and Partanen, A.-I. and Kulmala, M. and Järvinen, H. and Laaksonen, A. and Kerminen, V.-M.},
