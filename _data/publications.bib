@article{lin_changes_2018,
	title = {Changes in {Extreme} {Rainfall} {Over} {India} and {China} {Attributed} to {Regional} {Aerosol}‐{Cloud} {Interaction} {During} the {Late} 20th {Century} {Rapid} {Industrialization}},
