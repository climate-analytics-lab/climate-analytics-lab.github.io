@article{arellano_interactions_2020,
	title = {Interactions {Between} the {Amazonian} {Rainforest} and {Cumuli} {Clouds}: {A} {Large}‐{Eddy} {Simulation}, {High}‐{Resolution} {ECMWF}, and {Observational} {Intercomparison} {Study}},
