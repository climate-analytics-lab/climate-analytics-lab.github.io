@article{bollasina_contribution_2014,
	title = {Contribution of local and remote anthropogenic aerosols to the twentieth century weakening of the {South} {Asian} {Monsoon}: {AEROSOLS} {AND} {SOUTH} {ASIAN} {MONSOON}},
