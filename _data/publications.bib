	file = {Vernon-Galaxy formation- a Bayesian uncertainty analysis-2010-Bayesian Analysis:/Users/watson-parris/Zotero/storage/RWHHYCG6/Vernon-Galaxy formation- a Bayesian uncertainty analysis-2010-Bayesian Analysis.pdf:application/pdf},
}

@article{blochjohnson_greens_2024,
	title = {The {Green}'s {Function} {Model} {Intercomparison} {Project} ({GFMIP}) {Protocol}},
