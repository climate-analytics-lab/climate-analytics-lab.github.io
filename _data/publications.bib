	journal = {Journal of Geophysical Research: Atmospheres},
	author = {Wang, Hailong and Rasch, Philip J and Easter, Richard C and Singh, Balwinder and Zhang, Rudong and Ma, Po-Lun and Qian, Yun and Ghan, Steven J and Beagley, Nathaniel},
