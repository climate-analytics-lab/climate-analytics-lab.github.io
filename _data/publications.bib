	file = {Lavin-Simulation Intelligence- Towards a New Generation of Scientific Methods-2021-arXiv:/Users/watson-parris/Zotero/storage/P8YGIXF2/Lavin-Simulation Intelligence- Towards a New Generation of Scientific Methods-2021-arXiv.pdf:application/pdf},
