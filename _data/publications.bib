@article{dunne_gfdl_2020,
	title = {The {GFDL} {Earth} {System} {Model} {Version} 4.1 ({GFDL}‐{ESM} 4.1): {Overall} {Coupled} {Model} {Description} and {Simulation} {Characteristics}},
