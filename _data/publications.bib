	author = {Zaidan, Martha A. and Haapasilta, Ville and Relan, Rishi and Paasonen, Pauli and Kerminen, Veli-Matti and Junninen, Heikki and Kulmala, Markku and Foster, Adam S.},
	year = {2018},
	pages = {12699--12714},
}

@article{golaz_cloud_2013,
	title = {Cloud tuning in a coupled climate model: {Impact} on 20th century warming},
