	author = {Wood, R. and Mechoso, C. R. and Bretherton, C. S. and Weller, R. A. and Huebert, B. and Straneo, F. and Albrecht, B. A. and Coe, H. and Allen, G. and Vaughan, G. and Daum, P. and Fairall, C. and Chand, D. and Klenner, L. Gallardo and Garreaud, R. and Grados, C. and Covert, D. S. and Bates, T. S. and Krejci, R. and Russell, L. M. and Szoeke, S. de and Brewer, A. and Yuter, S. E. and Springston, S. R. and Chaigneau, A. and Toniazzo, T. and Minnis, P. and Palikonda, R. and Abel, S. J. and Brown, W. O. J. and Williams, S. and Fochesatto, J. and Brioude, J. and Bower, K. N.},
