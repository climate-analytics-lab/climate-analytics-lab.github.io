	journal = {Atmospheric Chemistry and Physics},
	author = {Lathem, T. L. and Beyersdorf, A. J. and Thornhill, K. L. and Winstead, E. L. and Cubison, M. J. and Hecobian, A. and Jimenez, J. L. and Weber, R. J. and Anderson, B. E. and Nenes, A.},
	year = {2013},
