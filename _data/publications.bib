	journal = {Journal of Geophysical Research: Atmospheres},
	author = {Medina, Jeessy and Nenes, Athanasios and Sotiropoulou, Rafaella‐Eleni P. and Cottrell, Laura D. and Ziemba, Luke D. and Beckman, Pieter J. and Griffin, Robert J.},
	year = {2007},
}

