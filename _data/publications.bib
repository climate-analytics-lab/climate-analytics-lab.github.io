	author = {Lamarque, J.-F. and Bond, T. C. and Eyring, V. and Granier, C. and Heil, A. and Klimont, Z. and Lee, D. and Liousse, C. and Mieville, A. and Owen, B. and Schultz, M. G. and Shindell, D. and Smith, S. J. and Stehfest, E. and Aardenne, J. Van and Cooper, O. R. and Kainuma, M. and Mahowald, N. and McConnell, J. R. and Naik, V. and Riahi, K. and Vuuren, D. P. van},
