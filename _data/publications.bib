	author = {Cohen, Rebecca E. and Frasier, Kaitlin E. and Baumann-Pickering, Simone and Wiggins, Sean M. and Rafter, Macey A. and Baggett, Lauren M. and Hildebrand, John A.},
	year = {2022},
	pages = {e0264988},
}

@article{hoffmann_liquidwater_2020,
	title = {{LiquidWater} {Path} {Steady} {States} in {Stratocumulus}: {Insights} {From} {Process}-{Level} {Emulation} and {Mixed}-{Layer} {Theory} {LiquidWater} {Path} {Steady} {States} in {Stratocumulus}: {Insights} {From} {Process}-{Level} {Emulation} and {Mixed}-{Layer} {Theory}},
	volume = {77},
	issn = {0022-4928},
