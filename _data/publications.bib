	journal = {Journal of Geophysical Research: Atmospheres},
	author = {Reid, Jeffrey S. and Kuehn, Ralph E. and Holz, Robert E. and Eloranta, Edwin W. and Kaku, Kathleen C. and Kuang, Shi and Newchurch, Michael J. and Thompson, Anne M. and Trepte, Charles R. and Zhang, Jianglong and Atwood, Samuel A. and Hand, Jenny L. and Holben, Brent N. and Minnis, Patrick and Posselt, Derek J.},
