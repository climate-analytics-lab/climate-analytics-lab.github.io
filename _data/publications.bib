@inproceedings{noauthor_cloud_2008,
	title = {Cloud {Computing} for parallel {Scientific} {HPC} {Applications}: {Feasibility} of {Running} {Coupled} {Atmosphere}-{Ocean} {Climate} {Models} on {Amazon}’s {EC2}},
