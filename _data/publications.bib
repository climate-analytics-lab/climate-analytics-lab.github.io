}

@article{zhou_greater_2021,
	title = {Greater committed warming after accounting for the pattern effect},
	volume = {11},
	issn = {1758-678X},
	url = {https://app.readcube.com/library/cca414c9-6857-4378-ae5d-4b7ca900d5f9/item/db6d3657-4d07-4448-995c-b4c3e21b0b9d},
	doi = {10.1038/s41558-020-00955-x},
	abstract = {Our planet’s energy balance is sensitive to spatial inhomogeneities in sea surface temperature and sea ice changes, but this is typically ignored in climate projections. Here, we show the energy budget during recent decades can be closed by combining changes in effective radiative forcing, linear radiative damping and this pattern effect. The pattern effect is of comparable magnitude but opposite sign to Earth’s net energy imbalance in the 2000s, indicating its importance when predicting the future climate on the basis of observations. After the pattern effect is accounted for, the best-estimate value of committed global warming at present-day forcing rises from 1.31 K (0.99–2.33 K, 5th–95th percentile) to over 2 K, and committed warming in 2100 with constant long-lived forcing increases from 1.32 K (0.94–2.03 K) to over 1.5 K, although the magnitude is sensitive to sea surface temperature dataset. Further constraints on the pattern effect are needed to reduce climate projection uncertainty. Earth’s energy budget depends on the global sea surface temperature pattern, which is currently counteracting warming more strongly than expected in the future. Including this pattern effect in projections causes committed warming with present-day forcing to exceed the Paris goals, implying less leeway than anticipated.},
	number = {2},
	journal = {Nature Climate Change},
	author = {Zhou, Chen and Zelinka, Mark D. and Dessler, Andrew E. and Wang, Minghuai},
	year = {2021},
	pages = {132--136},
}

